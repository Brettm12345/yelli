{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": ["dom", "es2015", "es2017"],
    "module": "commonjs",
    "noEmit": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "*": ["src/*", "*"]
    },
    "preserveConstEnums": true,
    "removeComments": false,
    "strict": true,
    "target": "esnext",
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "exclude": ["./node_modules"],
  "include": ["./src/**/*"]
}
